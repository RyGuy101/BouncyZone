<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SaveConfActivity" >

    <TextView
        android:id="@+id/saveConfHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Save Configuration"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textNameConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give it a name!" />

    <EditText
        android:id="@+id/editConfName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Untitled" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/saveConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveConf"
        android:text="Save!" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/cancelSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToMainSettings"
        android:text="Cancel" />

</LinearLayout>