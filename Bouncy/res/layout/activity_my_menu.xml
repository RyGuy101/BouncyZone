<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyMenu" >

    <!--
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/gameReset"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="gameReset"
            android:text="Clear Game" />

        <ImageButton
            android:id="@+id/gameServices"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="goToGameServices"
            android:src="@drawable/game_controller" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textBallColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ball Color" />

    <com.blogspot.mathjoy.bouncy.ColorView
        android:id="@+id/colorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Spinner
        android:id="@+id/ballColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/valueOfGravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0" />

    <SeekBar
        android:id="@+id/gravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/valueOfBounceLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0" />

    <SeekBar
        android:id="@+id/bouceLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/valueOfFriction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="50%" />

    <SeekBar
        android:id="@+id/friction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/restoreToDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="settingsReset"
            android:text="Restore Default Values" />

        <Button
            android:id="@+id/moreSettingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="goToMoreSettings"
            android:text="More >" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

<!--  </LinearLayout>-->

</LinearLayout>