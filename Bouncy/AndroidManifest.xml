<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blogspot.mathjoy.bouncy"
    android:versionCode="5"
    android:versionName="1.1.1" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.blogspot.mathjoy.bouncy.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.blogspot.mathjoy.bouncy.MyMenu"
            android:label="Settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.blogspot.mathjoy.bouncy.SaveConfActivity"
            android:label="@string/title_activity_save_conf" >
        </activity>
        <activity
            android:name="com.blogspot.mathjoy.bouncy.LoadConfActivity"
            android:label="@string/title_activity_load_conf" >
        </activity>
        <activity
            android:name="com.blogspot.mathjoy.bouncy.DelConfActivity"
            android:label="@string/title_activity_del_conf" >
        </activity>
    </application>

</manifest>